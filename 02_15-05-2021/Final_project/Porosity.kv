#:kivy 2.0.0
#:import utils kivy.utils
<Button>:
    font_size: 18
    #background_normal resetuje kolor przycisku - standardowo jest szary, przez co nadanie koloru powoduje wymieszanie go z szarym
    background_normal: ''

    #kolor w odniesieniu do RGB + przezroczystosc (opacity), można ustawiać nadając X/255.0 - musi byc typu float
    background_color: (69/255.0, 74/255.0, 82/255.0, .8)

    #utils to biblioteka która posiada metode zaciągającą kolor z jego kodu HEX:
    #background_color: utils.get_color_from_hex('#ffa12e')


<Filechooser>:
    name: "Filechooser"
    #definicja zmiennej w klasie
    filename:filename

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 10
        padding: 10

        BoxLayout:
            FileChooserIconView:
                dirselect: True
                on_selection: filename = root.select(*args)

        Label:
            id: filename
            text: f'Ścieżka pliku: {filename}'
            pos_hint: {"center_x": .5}
            size_hint: (0.5, 0.5)


<UserInterface>:
    name: "UserInterface"
    BoxLayout:
        size: root.size
        pos: root.pos

        orientation: 'vertical'
        spacing: 10
        padding: 30

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'x': 0, 'center_y': 1}

            Label:
                text: "Wczytaj dane"
                size: (200, 50)
                size_hint: (None, None)
                font_size: 18
                background_color: (0, 0, 0, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #text proporties
                color: (1, 1, 1, 1)
                bold: True
                italic: True
                outline_color: (0, 0, 0)
                outline_width: 5

            Button:
                text: "Select a file"
                size: (200, 50)
                size_hint: (None, None)
                on_release: root.LoadData()
