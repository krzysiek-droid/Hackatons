#:kivy 2.0.0


<Filechooser>:
    name: "Filechooser"
    label: label
    orientation: 'vertical'

    BoxLayout:
        FileChooserIconView:
            id: filechooser
            dirselect: True
            on_selection: label = root.select

    Label:
        id: label


<UserInterface>:
    name: "UserInterface"
    BoxLayout:
        size_hint_x: 0.3
        size_hint_y: 0.3
        pos_hint_x: 0.5
        pos_hint_y: 0.5

        orientation: 'vertical'

        Label:
            text: "Wczytaj dane"

        Button:
            text: "Select a file"
            on_release: root.LoadData()

    BoxLayout:
        id: preview
        orientation: 'vertical'

        Label:
            text: "PodglÄ…d pliku"

